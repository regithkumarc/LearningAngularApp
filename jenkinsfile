node {
    stage('Checkout'){
        git branch : 'SP2',
        url : 'https://github.com/regithkumarc/LearningAngularApp.git'
    }

    stage('Install node Module'){
        sh "npm install"
    }

    stage('Build'){
        sh "npm run build:ssr"
    }

    stage('Deploy'){
        sh "pm2 restart all"
    }
}